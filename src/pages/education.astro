---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";

---

<BaseLayout title = "Education and Training" sideBarActiveItemID="education">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Education and Training</div>
  </div>
 
  <style>
    .bold-underline {
      font-weight: bold;
      text-decoration: underline;
    }
    .contact-info {
      font-size: 1rem; /* Equivalent to text-1xl */
      width: 100%; /* Equivalent to w-full */
      font-weight: bold; /* Equivalent to font-bold */
    }
    .italic {
      font-style: italic; /* Correct property for italic text */
    }
  </style>
  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement title="BSc in Electrical and Electronic Engineering">
      <p>
        University of Peradeniya, Sri Lanka [ 06/01/2014 – 17/10/2017 ] 
        City: Peradeniya | Country: Sri Lanka
      </p>
    </TimeLineElement>

    <TimeLineElement title="MSc - Thesis Title: Federated Learning For Enhanced Sensor Reliability Of Automated Wireless Networks">
      <p>
        University of Oulu, Finland [ 01/01/2018 – 31/07/2019 ] | 
        City: Oulu | Country: Finland | Website: 
        <a href='http://dx.doi.org/10.13140/RG.2.2.36680.19201' target='_blank' class='bold-underline'>Thesis</a>
      </p>
    </TimeLineElement>

    <TimeLineElement title="PhD - Thesis Title: Reliable 5G Emergency Wireless Communication Service">
      <p>
        Universite Bourgogne Franche Comte (UBFC) [ 24/10/2019 – 02/06/2023 ] | 
        City: Montbeliard | Country: France | Website: 
        <a href='https://theses.fr/2023UBFCD013' target='_blank' class='bold-underline'>Thesis</a>
      </p>
    </TimeLineElement>
  </div>


</BaseLayout>
